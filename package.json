{
  "name": "mi-light-bar-controller",
  "version": "1.0.0",
  "type": "module",
  "description": "An Electron application for controlling Mi Light Bar",
  "main": "./out/main/index.js",
  "author": "https://github.com/Anqing-None",
  "homepage": "https://anqing-none.github.io/mi-light-bar-controller/",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview --outDir=dist",
    "dev": "electron-vite dev --outDir=dist",
    "package": "electron-vite build --outDir=dist && electron-forge package",
    "make ": "electron-vite build --outDir=dist && electron-forge make",
    "publish": "electron-vite build --outDir=dist && electron-forge publish",
    "test": "vitest",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@vueuse/core": "^10.10.0",
    "@vueuse/integrations": "^10.11.0",
    "chroma-js": "^2.4.2",
    "crypto-js": "^4.2.0",
    "electron-updater": "^6.1.7",
    "element-plus": "^2.7.5",
    "gridstack": "^10.3.0",
    "node-fetch": "^3.3.2",
    "qrcode": "^1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-deb": "^6.2.1",
    "@electron-forge/maker-rpm": "^6.2.1",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@electron-forge/publisher-github": "^7.4.0",
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rushstack/eslint-patch": "^1.7.1",
    "@types/chroma-js": "^2.4.4",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^18.19.9",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.12.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.1",
    "postcss": "^8.4.38",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-element-plus": "^0.8.0",
    "vite": "^5.0.12",
    "vitepress": "^1.3.1",
    "vitest": "^2.0.1",
    "vue": "^3.4.15",
    "vue-tsc": "^1.8.27"
  }
}
